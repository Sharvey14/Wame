<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aluminum"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f6ff00"
        android:textSize="200px"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="WAME"/>

    <TextView
        android:onClick="openInstructions"
        android:id="@+id/newbie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100px"
        android:layout_gravity="center"
        android:background="#0bc10b"
        android:textColor="#000000"
        android:layout_marginTop="55dp"
        android:text="I'm a Newbie"/>

    <TextView
        android:onClick="op"
        android:id="@+id/Hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100px"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:background="#c1140a"
        android:textColor="#000000"
        android:text="  Hard Mode  "/>

</LinearLayout>