<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/busywork"
    android:orientation="vertical"
    tools:context=".NewbieActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:textColor="#00ff00"
        android:textStyle="bold"
        android:gravity="center"
        android:text="What goes on in your life?"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="35dp"
        android:buttonTint="#ff0000"
        android:text="I have school"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="35dp"
        android:buttonTint="#ff0000"
        android:text="I got a job"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="35dp"
        android:buttonTint="#ff0000"
        android:text="I participate in other activities"
        />

    <Button
        android:layout_width="270dp"
        android:layout_height="125dp"
        android:layout_marginTop="55dp"
        android:textSize="75dp"
        android:text="NEXT!"
        android:background="#0000ff"
        android:onClick="openSchool"
        android:layout_gravity="center"/>

</LinearLayout>